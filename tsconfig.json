{
  "compilerOptions": {
    "target": "es2015",
    "module": "es6",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["es2020"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*"]
}